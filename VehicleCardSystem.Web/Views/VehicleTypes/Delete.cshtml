@model VehicleCardSystem.Core.Models.VehicleType

@{
    ViewData["Title"] = "Delete Vehicle Type";
}

<h2 id="title" class="mb-0">@ViewData["Title"]</h2>

<h3 class ="text-danger mt-3">Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        
        <dt class="col-sm-2 fw-bold">
            @Html.DisplayNameFor(model => model.Brand):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Brand)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ModelName):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ModelName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CapacityKg):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CapacityKg)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CapacityM3):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CapacityM3)
        </dd>
    </dl>
    
    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="VehicletypeId" />
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash-alt"></i> Delete
            
        </button>       
        <a asp-action="Index" class="btn btn-secondary ms-2">
            <i class="fas fa-arrow-alt-circle-left"></i> Cancel
        </a>
    </form>
</div>
