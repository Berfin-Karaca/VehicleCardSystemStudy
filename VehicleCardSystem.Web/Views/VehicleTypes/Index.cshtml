@model IEnumerable<VehicleCardSystem.Core.Models.VehicleType>

@{
    ViewData["Title"] = "Vehicle Types";
}

<main aria-labelledby="title">
    <div class="d-flex justify-content-between align-items-center mb-3">
        
        <h3 id="title" class="mb-0">@ViewData["Title"]</h3> 
        <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus-circle"></i> Create New</a>
    </div>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Brand)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModelName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CapacityKg)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CapacityM3)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Brand)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModelName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CapacityKg)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CapacityM3)
                </td>
                <td>
                        <a asp-action="Edit" asp-route-id="@item.VehicletypeId" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i> Update</a> |
                        <a asp-action="Details" asp-route-id="@item.VehicletypeId" class="btn btn-sm btn-info"><i class="fas fa-circle-info"></i> Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.VehicletypeId" class="btn btn-sm btn-danger"><i class="fas fa-xmark"></i> Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</main>