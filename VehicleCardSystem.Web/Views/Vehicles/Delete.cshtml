@model VehicleCardSystem.Core.Models.Vehicle

@{
    ViewData["Title"] = "Delete Vehicle";
}

<h3 id="title" class="mb-0">@ViewData["Title"]</h3>

<h3 class="text-danger mt-3">Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
       
        <dt class="col-sm-2 fw-bold">
            @Html.DisplayNameFor(model => model.Plate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Plate)
        </dd>
        <dt class="col-sm-2 fw-bold">
            <span class="fw-bold">VehicleType:</span>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VehicleTypes.ModelName)
        </dd>
        <dt class="col-sm-2 fw-bold">
            @Html.DisplayNameFor(model => model.ModelYear)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ModelYear)
        </dd>
        <dt class="col-sm-2 fw-bold">
            @Html.DisplayNameFor(model => model.Color)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Color)
        </dd>
       
    </dl>
    
   
    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="VehicleId" />
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash-alt"></i> Delete

        </button>
        <a asp-action="Index" class="btn btn-secondary ms-2">
            <i class="fas fa-arrow-alt-circle-left"></i> Cancel
        </a>
    </form>
</div>
